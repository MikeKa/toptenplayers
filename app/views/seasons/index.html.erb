<p id="notice"><%= notice %></p>

<h3><%= link_to '< Back to Leagues', leagues_path %></h3>


<h1><%= @currentleague.name %> <br>
Seasons: </h1>


<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.id %></td>
        <td><%= season.name %></td>
        <td><%= season.description %></td>
        <td><%= link_to 'Players', players_path(:id => "", :season_id => season.id, :league_id => params[:league_id]) %></td>
        <td><%= link_to 'Show', season %></td>
        <td><%= link_to 'Edit', edit_season_path(season) %></td>
        <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3><%= link_to 'Add New Season', new_season_path(:league_id => params[:league_id]) %></h3>
